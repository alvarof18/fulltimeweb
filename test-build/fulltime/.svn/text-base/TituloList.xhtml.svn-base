<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
    xmlns:s="http://jboss.com/products/seam/taglib"
    xmlns:ui="http://java.sun.com/jsf/facelets"
    xmlns:f="http://java.sun.com/jsf/core"
    xmlns:h="http://java.sun.com/jsf/html"
    xmlns:rich="http://richfaces.org/rich"
    template="#{requestScope.contextPath}/layout/template.xhtml">

<ui:define name="body">

    <h:form id="tituloSearch" styleClass="edit">

        <rich:simpleTogglePanel label="Par&#225;metros de Busqueda" switchType="ajax">

            <s:decorate template="#{requestScope.contextPath}/layout/display.xhtml">
                <ui:define name="label">Descripci&#243;n</ui:define>
                <h:inputText id="descripcion" value="#{tituloList.titulo.descripcion}"/>
            </s:decorate>


        </rich:simpleTogglePanel>

    <s:div styleClass="actionButtons" rendered="#{empty from}">
        <s:button view="/fulltime/TituloEdit.xhtml"
                    id="create"
           propagation="none"
                 value="Crear">
            <f:param name="tituloTituId"/>
        </s:button>
            <h:commandButton id="search" value="Buscar" action="/fulltime/TituloList.xhtml"/>
            <s:button id="reset" value="Cancelar" includePageParams="false"/>        
    </s:div>

    </h:form>

    <rich:panel>
        <f:facet name="header">Resultados Busqueda</f:facet>
    <div class="results" id="tituloList">

    <h:outputText value="No existe resultados"
               rendered="#{empty tituloList.resultList}"/>

    <rich:dataTable id="tituloList"
                var="_titulo"
              value="#{tituloList.resultList}"
           rendered="#{not empty tituloList.resultList}">
<!--           
        <h:column>
            <f:facet name="header">
                <ui:include src="#{requestScope.contextPath}/layout/sort.xhtml">
                    <ui:param name="entityList" value="#{tituloList}"/>
                    <ui:param name="propertyLabel" value="Titu id"/>
                    <ui:param name="propertyPath" value="titulo.tituId"/>
                </ui:include>
            </f:facet>
            <h:outputText value="#{_titulo.tituId}"/>
        </h:column>
-->        
        <h:column>
            <f:facet name="header">
                <ui:include src="#{requestScope.contextPath}/layout/sort.xhtml">
                    <ui:param name="entityList" value="#{tituloList}"/>
                    <ui:param name="propertyLabel" value="Descripci&#243;n"/>
                    <ui:param name="propertyPath" value="titulo.descripcion"/>
                </ui:include>
            </f:facet>
            <h:outputText value="#{_titulo.descripcion}"/>
        </h:column>
        <rich:column styleClass="action">
            <f:facet name="header">Acci&#243;n</f:facet>
            <s:link view="/fulltime/#{empty from ? 'Titulo' : from}.xhtml"
                   value="#{empty from ? 'Ver' : 'Seleccionar'}"
             propagation="#{empty from ? 'none' : 'default'}"
                      id="titulo">
                <f:param name="tituloTituId"
                        value="#{_titulo.tituId}"/>
            </s:link>
            #{' '}
            <s:link view="/fulltime/TituloEdit.xhtml"
                   value="Editar"
             propagation="none"
                      id="tituloEdit"
                rendered="#{empty from}">
                <f:param name="tituloTituId"
                        value="#{_titulo.tituId}"/>
            </s:link>
        </rich:column>
    </rich:dataTable>

    </div>
    </rich:panel>

    <div class="tableControl">

        <s:link view="/fulltime/TituloList.xhtml"
            rendered="#{tituloList.previousExists}"
               value="#{messages.left}#{messages.left} First Page"
                  id="firstPage">
          <f:param name="firstResult" value="0"/>
        </s:link>

        <s:link view="/fulltime/TituloList.xhtml"
            rendered="#{tituloList.previousExists}"
               value="#{messages.left} Previous Page"
                  id="previousPage">
            <f:param name="firstResult"
                    value="#{tituloList.previousFirstResult}"/>
        </s:link>

        <s:link view="/fulltime/TituloList.xhtml"
            rendered="#{tituloList.nextExists}"
               value="Next Page #{messages.right}"
                  id="nextPage">
            <f:param name="firstResult"
                    value="#{tituloList.nextFirstResult}"/>
        </s:link>

        <s:link view="/fulltime/TituloList.xhtml"
            rendered="#{tituloList.nextExists}"
               value="Last Page #{messages.right}#{messages.right}"
                  id="lastPage">
            <f:param name="firstResult"
                    value="#{tituloList.lastFirstResult}"/>
        </s:link>

    </div>

</ui:define>

</ui:composition>
