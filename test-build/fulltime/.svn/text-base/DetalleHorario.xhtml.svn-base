    xmlns:f="http://java.sun.com/jsf/core"
    xmlns:h="http://java.sun.com/jsf/html"
    xmlns:rich="http://richfaces.org/rich"
    template="#{requestScope.contextPath}/layout/template.xhtml">

<ui:define name="body">

    <rich:panel>
        <f:facet name="header">Detalle Horario</f:facet>

        <s:decorate id="Horario" template="#{requestScope.contextPath}/layout/display.xhtml">
            <ui:define name="label">Horario</ui:define>
            <h:outputText value="#{detalleHorarioHome.instance.horario.descripcion}"/>
        </s:decorate>


        <s:decorate id="descripcion" template="#{requestScope.contextPath}/layout/display.xhtml">
            <ui:define name="label">Descripci&#243;n</ui:define>
            <h:outputText value="#{detalleHorarioHome.instance.descripcion}"/>
        </s:decorate>

        <s:decorate id="hora" template="#{requestScope.contextPath}/layout/display.xhtml">
            <ui:define name="label">Hora</ui:define>
            <h:outputText value="#{detalleHorarioHome.instance.hora}">
                <s:convertDateTime type="both" dateStyle="short"/>
            </h:outputText>
        </s:decorate>

        <s:decorate id="maxMinuto" template="#{requestScope.contextPath}/layout/display.xhtml">
            <ui:define name="label">Max minuto</ui:define>
            <h:outputText value="#{detalleHorarioHome.instance.maxMinuto}"/>
        </s:decorate>

        <div style="clear:both"/>

    </rich:panel>

    <div class="actionButtons">

        <s:button view="/fulltime/DetalleHorarioEdit.xhtml"
                    id="edit"
                 value="Editar"/>

        <s:button view="/fulltime/#{empty detalleHorarioFrom ? 'DetalleHorarioList' : detalleHorarioFrom}.xhtml"
                    id="done"
                 value="Aceptar"/>

    </div>

