	<queryString>
		<![CDATA[SELECT
     cargo.DESCRIPCION AS cargo_DESCRIPCION,
     cargo.SUELDO AS cargo_SUELDO,
     tipo_cargo.DESCRIPCION AS tipo_cargo_DESCRIPCION,
     detalle_tipo_parametro.DESCRIPCION AS detalle_tipo_parametro_DESCRIPCION
FROM
     tipo_cargo tipo_cargo INNER JOIN cargo cargo ON tipo_cargo.TICA_ID = cargo.TICA_ID
     INNER JOIN detalle_tipo_parametro detalle_tipo_parametro ON cargo.HORA_EXTRA = detalle_tipo_parametro.DTPA_ID
WHERE
     lower(cargo.DESCRIPCION) LIKE $P{descripcion}
ORDER BY cargo.DESCRIPCION]]>
	</queryString>
